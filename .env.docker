# Docker部署环境配置
# 完全Docker化部署时使用

# 应用环境
FLASK_ENV=production
USE_PROXY_POOL=true
PROXY_RATE_LIMIT=1.5
PROXY_HEALTH_CHECK_INTERVAL=60

# 数据库配置（Docker内部）
DATABASE_URL=postgresql://postgres:portfolio_password_2024@postgres:5432/portfolio_backtest

# Redis配置（Docker内部）
REDIS_URL=redis://redis:6379/0
PROXY_POOL_REDIS_URL=redis://redis-proxy-pool:6379/0

# Celery配置
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# 安全配置（生产环境请修改）
SECRET_KEY=docker_secret_key_change_in_production_2024
JWT_SECRET_KEY=docker_jwt_secret_key_change_in_production_2024

# 外部API配置
ALPHA_VANTAGE_API_KEY=your_api_key_here